        <activity android:name=".activity.mobile.report.MobileDealQueryActivity" />
        <activity android:name=".activity.mobile.report.MobileSaleRankActivity" />
        <activity android:name=".activity.mobile.business.MobileWholesaleRefundOrderActivity" />
        <activity android:name=".activity.mobile.business.MobileWholesaleRefundOrderActivity$MobileAddWholesaleRefundOrderActivity" />
        <activity android:name=".activity.mobile.business.MobileWholesaleOrderActivity" />
