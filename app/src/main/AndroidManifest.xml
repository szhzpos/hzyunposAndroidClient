        <activity android:name=".activity.mobile.business.EditConsumerActivity" />
        <activity
            android:name=".activity.mobile.business.MobileConsumerInfoActivity"
            android:windowSoftInputMode="adjustResize|stateUnchanged" />
        <activity android:name=".activity.mobile.business.EditSupplierActivity" />
        <activity android:name=".activity.mobile.business.AbstractEditArchiveActivity" />
        <activity
            android:name=".activity.mobile.business.MobileSupplierInfoActivity"
            android:windowSoftInputMode="adjustResize|stateUnchanged" />
        <activity android:name=".activity.mobile.business.MobileEditGoodsCategoryActivity" />
        <activity android:name=".activity.mobile.business.MobileInventoryOrderDetailActivity" />
        <activity android:name=".activity.mobile.business.MobileInventoryOrderActivity" />
        <activity android:name=".activity.mobile.business.MobileInventoryAddTaskActivity" />
        <activity android:name=".activity.mobile.business.MobileInventoryTaskActivity" />
        <activity
            android:name=".activity.mobile.business.MobileTransferInOrderDetailActivity"
            android:windowSoftInputMode="adjustResize|stateUnchanged" />
        <activity android:name=".activity.mobile.business.MobileTransferInOrderActivity" />
        <activity android:name=".activity.mobile.business.MobileTransferOutOrderActivity" />
        <activity android:name=".activity.mobile.business.MobileTransferOutOrderActivity$MobileAddTransferOutOrderActivity" />
        <activity
            android:name=".activity.mobile.business.MobilePracticalInventoryAddOrderActivity"
            android:windowSoftInputMode="adjustResize|stateUnchanged" />
        <activity android:name=".activity.mobile.business.MobilePracticalInventoryOrderActivity" />
        <activity android:name=".activity.mobile.business.MobileOtherWarehouseOrderActivity" />
        <activity android:name=".activity.mobile.business.MobileOtherWarehouseOrderActivity$MobileAddOtherWarehouseOrderActivity" />
        <activity
            android:name=".activity.mobile.business.MobileVipManageActivity"
            android:windowSoftInputMode="adjustResize|stateUnchanged" />
        <activity
            android:name=".activity.mobile.business.MobileSelectGoodsActivity"
            android:windowSoftInputMode="adjustResize|stateUnchanged" />
        <activity android:name=".activity.mobile.report.MobileCashierTransfer" />
        <activity android:name=".activity.mobile.report.MobileCashierTransfer$TransferDetailsActivity" />
        <activity android:name=".activity.mobile.report.MobileStockQueryActivity" />
        <activity android:name=".activity.mobile.report.MobileCategoryStatisticsActivity" />
