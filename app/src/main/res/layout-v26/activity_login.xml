<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logobg"
    tools:context=".activity.LoginActivity">

    <RelativeLayout
        android:id="@+id/login_info"
        android:layout_width="598dp"
        android:layout_height="298dp"
        android:layout_centerInParent="true"
        android:background="@drawable/round_shape"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/keyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="@dimen/margin_8">

            <Button
                android:id="@+id/_one"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_weight="2.5"
                android:background="@drawable/button_sub_blue"
                android:text="@string/one_sz"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/_two"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_weight="2.5"
                android:background="@drawable/button_sub_blue"
                android:text="@string/two_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toEndOf="@+id/_one"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/_three"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_weight="2.5"
                android:background="@drawable/button_sub_blue"
                android:text="@string/three_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toEndOf="@+id/_two"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/_back"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginEnd="@dimen/margin_2"
                android:background="@drawable/button_sub_blue"
                android:text="@string/back"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/_three"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/_four"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_weight="2.5"
                android:background="@drawable/button_sub_blue"
                android:text="@string/four_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/_one" />

            <Button
                android:id="@+id/_five"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_weight="2.5"
                android:background="@drawable/button_sub_blue"
                android:text="@string/five_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toEndOf="@+id/_four"
                app:layout_constraintTop_toBottomOf="@+id/_two" />

            <Button
                android:id="@+id/_six"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_weight="2.5"
                android:background="@drawable/button_sub_blue"
                android:text="@string/six_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toEndOf="@+id/_five"
                app:layout_constraintTop_toBottomOf="@+id/_three" />

            <Button
                android:id="@+id/_seven"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_weight="2.5"
                android:background="@drawable/button_sub_blue"
                android:text="@string/seven_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/_four" />

            <Button
                android:id="@+id/_eight"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_weight="2.5"
                android:background="@drawable/button_sub_blue"
                android:text="@string/eight_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toEndOf="@+id/_seven"
                app:layout_constraintTop_toBottomOf="@+id/_five" />

            <Button
                android:id="@+id/_nine"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_weight="2.5"
                android:background="@drawable/button_sub_blue"
                android:text="@string/nine_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toEndOf="@+id/_eight"
                app:layout_constraintTop_toBottomOf="@+id/_six" />

            <Button
                android:id="@+id/_zero"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2"
                android:background="@drawable/button_sub_blue"
                android:text="@string/zero_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toEndOf="@+id/_nine"
                app:layout_constraintTop_toBottomOf="@id/_ok" />

            <Button
                android:id="@+id/_ok"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_marginEnd="@dimen/margin_2"
                android:background="@drawable/button_sub_blue"
                android:text="@string/search_sz"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/_nine"
                app:layout_constraintTop_toBottomOf="@id/_back" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_5"
            android:contentDescription="@string/space_sz"
            app:srcCompat="@drawable/logo" />

        <RelativeLayout
            android:id="@+id/userInfo"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="false"
            android:focusable="auto"
            android:orientation="vertical">

            <Button
                android:id="@+id/b_login"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/login_btn_width"
                android:layout_height="@dimen/login_btn_height"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_blue"
                android:text="@string/login"
                android:textColor="@color/blue_white"
                android:textSize="@dimen/font_size_18" />

            <Button
                android:id="@+id/cancel"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/login_btn_width"
                android:layout_height="@dimen/login_btn_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_pink"
                android:text="@string/cancel"
                android:textColor="@color/pink_white"
                android:textSize="@dimen/font_size_18" />

            <EditText
                android:id="@+id/user_id"
                android:layout_width="@dimen/login_text_width"
                android:layout_height="@dimen/login_text_height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@drawable/border_sub_gray"
                android:drawableStart="@drawable/login_user"
                android:drawablePadding="@dimen/margin_8"
                android:ems="10"
                android:focusable="auto"
                android:hint="@string/user_name"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:textColor="@color/text_color" />

            <EditText
                android:id="@+id/password"
                android:layout_width="@dimen/login_text_width"
                android:layout_height="@dimen/login_text_height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="78dp"
                android:autofillHints=""
                android:background="@drawable/border_sub_gray"
                android:drawableStart="@drawable/login_password"
                android:drawablePadding="@dimen/margin_8"
                android:ems="10"
                android:focusable="auto"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:textColor="@color/text_color" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/setup_ico"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignBottom="@id/b_login"
                android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dp"
                android:background="@drawable/setup">

            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>