<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 正三角 -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="-40%"
            android:pivotY="80%">
            <shape android:shape="rectangle">
                <size
                    android:width="@dimen/size_16"
                    android:height="@dimen/size_16" />
                <solid android:color="@color/black_subtransparent" />
            </shape>
        </rotate>
    </item>
</layer-list>