<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_2"
    android:paddingTop="@dimen/margin_2"
    android:paddingEnd="@dimen/margin_2"
    android:paddingBottom="@dimen/margin_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:background="@drawable/bottom_separator_gray"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_12"
            android:gravity="center_vertical"
            android:text="@string/not_empty_sign"
            android:textColor="@color/orange_1"
            android:textSize="@dimen/font_size_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/vip_ph_num_sz"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />

        <EditText
            android:id="@+id/p_num_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:importantForAutofill="no"
            android:inputType="number"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:background="@drawable/bottom_separator_gray"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_12"
            android:gravity="center_vertical"
            android:text="@string/not_empty_sign"
            android:textColor="@color/orange_1"
            android:textSize="@dimen/font_size_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/vip_card_id_sz"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />

        <EditText
            android:id="@+id/card_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:background="@drawable/bottom_separator_gray"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_12"
            android:gravity="center_vertical"
            android:text="@string/not_empty_sign"
            android:textColor="@color/orange_1"
            android:textSize="@dimen/font_size_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/grade_sz"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/grade_tv"
            android:layout_width="@dimen/width_128"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:drawableEnd="@drawable/content"
            android:gravity="center_vertical"
            android:importantForAutofill="no"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:background="@drawable/bottom_separator_gray"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_12"
            android:gravity="center_vertical"
            android:text="@string/not_empty_sign"
            android:textColor="@color/orange_1"
            android:textSize="@dimen/font_size_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/vip_name"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />

        <EditText
            android:id="@+id/name_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:background="@drawable/bottom_separator_gray"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_12"
            android:gravity="center_vertical"
            android:text="@string/not_empty_sign"
            android:textColor="@color/orange_1"
            android:textSize="@dimen/font_size_18"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/vip_six_sz"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/male_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/male" />

            <RadioButton
                android:id="@+id/female_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_18"
                android:text="@string/female" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:background="@drawable/bottom_separator_gray"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_12"
            android:gravity="center_vertical"
            android:text="@string/not_empty_sign"
            android:textColor="@color/orange_1"
            android:textSize="@dimen/font_size_18"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/birth_sz"
            android:textColor="@color/label_text_color"
            android:textSize="@dimen/font_size_14" />

        <Spinner
            android:id="@+id/birthday_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:dropDownWidth="match_parent"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/n_vip_birthday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="@string/input_birthday_hint_sz"
            android:inputType="none"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:background="@drawable/bottom_separator_gray"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:gravity="center_vertical"
            android:text="@string/sale_man_colon_sz"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/sale_man_tv"
            android:layout_width="@dimen/width_128"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:drawableEnd="@drawable/content"
            android:gravity="center_vertical"
            android:importantForAutofill="no"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:background="@drawable/bottom_separator_gray"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:gravity="center_vertical"
            android:text="@string/referrer"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />

        <EditText
            android:id="@+id/referrer_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:importantForAutofill="no"
            android:inputType="number"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_88"
        android:background="@drawable/bottom_separator_gray"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_12"
            android:gravity="center_vertical"
            android:text="@string/not_empty_sign"
            android:textColor="@color/orange_1"
            android:textSize="@dimen/font_size_18"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/remark_colon_sz"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />

        <EditText
            android:id="@+id/remark_mt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_border_sub_gray"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>