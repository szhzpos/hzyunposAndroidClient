<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/barcode_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/gp_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/goods_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_2"
        android:paddingBottom="@dimen/margin_5">

        <TextView
            android:id="@+id/row_id"
            android:layout_width="@dimen/mobile_sale_goods_content_margin"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/goods_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_20"

            android:text="某某商品"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mobile_sale_goods_content_margin"
        android:layout_marginBottom="@dimen/margin_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/barcode"
            android:layout_width="@dimen/size_118"
            android:layout_height="wrap_content"

            android:textColor="@color/black"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/discount_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/orange_1"
            android:textSize="@dimen/font_size_14" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/mobile_minus_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/mobile_p_m_btn_size"
            android:layout_height="@dimen/mobile_p_m_btn_size"
            android:layout_marginStart="@dimen/size_35"
            android:background="@drawable/minus" />

        <TextView
            android:id="@+id/sale_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/margin_8"

            android:layout_marginEnd="@dimen/margin_8"
            android:text="1.00"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />

        <Button
            android:id="@+id/mobile_plus_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/mobile_p_m_btn_size"
            android:layout_height="@dimen/mobile_p_m_btn_size"
            android:layout_marginEnd="@dimen/margin_18"
            android:background="@drawable/plus" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mobile_sale_goods_content_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/b_f_ori_price_sz"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/symbol_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/currency_symbol_sz"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/original_price"
            android:layout_width="@dimen/size_68"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_5"
            android:text="88888888"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/sale_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/margin_18"
            android:text="1028"
            android:textAlignment="viewStart"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/amt_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/currency_symbol_sz"
            android:textColor="@color/orange_1"
            android:textSize="@dimen/font_size_18" />

        <TextView
            android:id="@+id/sale_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="@dimen/margin_2"
            android:textColor="@color/orange_1"
            android:textSize="@dimen/font_size_18" />
    </LinearLayout>

    <com.wyc.cloudapp.customizationView.InterceptLinearLayout
        android:id="@+id/mobile_float_fun_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/mobile_alter_price_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_2"
            android:layout_weight="1"
            android:background="@drawable/button_sub_green"
            android:text="@string/change_price_sz"
            android:textColor="@color/gray_7"
            android:textSize="@dimen/font_size_16" />

        <Button
            android:id="@+id/mobile_discount_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_2"
            android:layout_weight="1"
            android:background="@drawable/button_sub_green"
            android:text="@string/discount_sz"
            android:textColor="@color/gray_7"
            android:textSize="@dimen/font_size_16" />

        <Button
            android:id="@+id/mobile_alter_num_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_2"
            android:layout_weight="1"
            android:background="@drawable/button_sub_green"
            android:text="@string/num_not_colon_sz"
            android:textColor="@color/gray_7"
            android:textSize="@dimen/font_size_16" />

        <Button
            android:id="@+id/mobile_del_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_2"
            android:layout_weight="1"
            android:background="@drawable/button_sub_green"
            android:text="@string/delete_sz"
            android:textColor="@color/gray_7"
            android:textSize="@dimen/font_size_14" />
    </com.wyc.cloudapp.customizationView.InterceptLinearLayout>

</LinearLayout>