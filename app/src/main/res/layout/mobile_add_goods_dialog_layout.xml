<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border_sub_gray"
    android:baselineAligned="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_goods_item_h"
        android:layout_marginTop="@dimen/margin_2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/width_85"
            android:layout_height="wrap_content"
            android:text="@string/a_goods_attr_sz"
            android:textAlignment="viewEnd"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/a_goods_attr_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_sub_gray"
            android:drawableEnd="@drawable/omit"
            android:ems="12"
            android:hint="@string/space_sz"
            android:importantForAutofill="no"
            android:inputType="number"
            android:paddingStart="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_5"
            android:selectAllOnFocus="true"
            android:textColor="@color/text_color" />

        <EditText
            android:id="@+id/a_metering_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_2"
            android:layout_weight="2"
            android:background="@drawable/border_sub_gray"
            android:drawableEnd="@drawable/omit"
            android:ems="12"
            android:hint="@string/space_sz"
            android:importantForAutofill="no"
            android:inputType="number"
            android:paddingStart="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_5"
            android:selectAllOnFocus="true"
            android:textColor="@color/text_color"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/add_goods_item_h"
        android:layout_marginTop="@dimen/margin_8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/width_85"
            android:layout_height="wrap_content"
            android:text="@string/a_barcode_sz"
            android:textAlignment="viewEnd"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/a_barcode_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/border_sub_gray"
            android:ems="12"
            android:hint="@string/space_sz"
            android:importantForAutofill="no"
            android:inputType="number"
            android:paddingStart="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_5"
            android:selectAllOnFocus="true"
            android:textColor="@color/text_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/add_goods_item_h"
        android:layout_marginTop="@dimen/margin_8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/width_85"
            android:layout_height="wrap_content"
            android:text="@string/a_g_name_sz"
            android:textAlignment="viewEnd"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/a_name_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/border_sub_gray"
            android:ems="12"
            android:hint="@string/space_sz"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:paddingStart="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_5"
            android:selectAllOnFocus="true"
            android:textColor="@color/text_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/add_goods_item_h"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/width_85"
            android:layout_height="wrap_content"
            android:text="@string/a_supplier_sz"
            android:textAlignment="viewEnd"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/a_supplier_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/border_sub_gray"
            android:drawableEnd="@drawable/omit"
            android:ems="8"
            android:hint="@string/space_sz"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:paddingStart="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_5"
            android:selectAllOnFocus="true"
            android:text="@string/space_sz"
            android:textColor="@color/text_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/add_goods_item_h"
        android:layout_marginTop="@dimen/margin_2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/width_85"
            android:layout_height="wrap_content"
            android:text="@string/a_category_sz"
            android:textAlignment="viewEnd"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/a_category_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/border_sub_gray"
            android:drawableEnd="@drawable/omit"
            android:ems="10"
            android:hint="@string/space_sz"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:paddingStart="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_5"
            android:textColor="@color/text_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/add_goods_item_h"
        android:layout_marginTop="@dimen/margin_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/width_85"
            android:layout_height="wrap_content"
            android:text="@string/a_item_no_sz"
            android:textAlignment="viewEnd"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/a_item_no_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/border_sub_gray"
            android:ems="10"
            android:hint="@string/space_sz"
            android:importantForAutofill="no"
            android:inputType="number"
            android:paddingStart="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_5"
            android:selectAllOnFocus="true"
            android:textColor="@color/text_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/add_goods_item_h"
        android:layout_marginTop="@dimen/margin_8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/width_85"
            android:layout_height="wrap_content"
            android:text="@string/a_unit_sz"
            android:textAlignment="viewEnd"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/a_unit_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/border_sub_gray"
            android:drawableEnd="@drawable/omit"
            android:ems="10"
            android:hint="@string/space_sz"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:paddingStart="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_5"
            android:textColor="@color/text_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/add_goods_item_h"
        android:layout_marginTop="@dimen/margin_8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/width_85"
            android:layout_height="wrap_content"
            android:text="@string/a_purchase_price_sz"
            android:textAlignment="viewEnd"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/a_pur_price_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/border_sub_gray"
            android:ems="4"
            android:hint="@string/space_sz"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:paddingStart="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_5"
            android:selectAllOnFocus="true"
            android:text="@string/zero_p_z_sz"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_2"
            android:text="@string/a_ckml_sz"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />

        <EditText
            android:id="@+id/a_ckml_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_style"
            android:gravity="center_vertical"
            android:hint="@string/space_sz"
            android:importantForAutofill="no"
            android:inputType="none"
            android:text="@string/zero_p_z_sz"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/add_goods_item_h"
        android:layout_marginTop="@dimen/margin_8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/width_85"
            android:layout_height="wrap_content"
            android:text="@string/a_retail_price"
            android:textAlignment="viewEnd"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/a_retail_price_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/border_sub_gray"
            android:ems="4"
            android:hint="@string/space_sz"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:paddingStart="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_5"
            android:selectAllOnFocus="true"
            android:text="@string/zero_p_z_sz"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="@dimen/width_68"
            android:layout_height="wrap_content"
            android:text="@string/a_vip_price_sz"
            android:textAlignment="viewEnd"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/a_vip_price_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/border_sub_gray"
            android:ems="4"
            android:hint="@string/space_sz"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:paddingStart="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_5"
            android:selectAllOnFocus="true"
            android:text="@string/zero_p_z_sz"
            android:textColor="@color/text_color" />
    </LinearLayout>

    <Button
        android:id="@+id/save"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/margin_18"
        android:layout_marginEnd="@dimen/margin_2"
        android:layout_marginBottom="@dimen/margin_2"
        android:background="@drawable/button_blue"
        android:text="@string/save_sz"
        android:textColor="@color/blue_white"
        android:textSize="@dimen/font_size_18" />
</LinearLayout>