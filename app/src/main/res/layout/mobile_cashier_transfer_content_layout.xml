<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_58"
    android:background="@drawable/bottom_separator"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/sum_money"
        android:layout_width="@dimen/cashier_transfer_title_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/transfer_cash_sz"
        android:textSize="@dimen/font_size_16" />

    <TextView
        android:id="@+id/sj_money"
        android:layout_width="@dimen/cashier_transfer_title_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/actual_cash_sz"
        android:textSize="@dimen/font_size_16" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/zero_sz"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/order_money"
            android:layout_width="@dimen/cashier_transfer_title_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sale_sz"
            android:textSize="@dimen/font_size_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/refund_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/zero_sz"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/refund_money"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/o_back_sz"
            android:textSize="@dimen/font_size_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recharge_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/zero_sz"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/recharge_money"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/charge_sz"
            android:textSize="@dimen/font_size_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/oncecard_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/zero_sz"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/oncecard_money"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/times_card_sz"
            android:textSize="@dimen/font_size_16" />

    </LinearLayout>

</LinearLayout>