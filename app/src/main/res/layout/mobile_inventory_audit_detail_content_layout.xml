<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sub_green"
    android:paddingTop="@dimen/margin_2"
    android:paddingBottom="@dimen/margin_2">

    <TextView
        android:id="@+id/barcode_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_25"
        android:layout_marginStart="@dimen/margin_5"
        android:gravity="center"
        android:minWidth="@dimen/width_118"
        android:text="6954767433073"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintBottom_toTopOf="@id/lock_stock_num_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_25"
        android:layout_marginStart="@dimen/margin_8"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/barcode_tv"
        app:layout_constraintTop_toTopOf="@id/barcode_tv" />

    <TextView
        android:id="@+id/lock_stock_num_tv"
        android:layout_width="@dimen/width_68"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_5"
        android:gravity="center"
        android:text="@string/lock_stock_num_sz"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barcode_tv" />

    <TextView
        android:id="@+id/app_num_tv"
        android:layout_width="@dimen/width_85"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/app_num_sz"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_14"
        app:layout_constraintStart_toEndOf="@id/lock_stock_num_tv"
        app:layout_constraintTop_toTopOf="@id/lock_stock_num_tv" />

    <TextView
        android:id="@+id/manual_num_tv"
        android:layout_width="@dimen/size_95"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/manual_num_sz"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_14"
        app:layout_constraintStart_toEndOf="@id/app_num_tv"
        app:layout_constraintTop_toTopOf="@id/app_num_tv" />

    <TextView
        android:id="@+id/practical_sum_tv"
        android:layout_width="@dimen/width_75"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/Practical_sum_sz"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_14"
        app:layout_constraintStart_toEndOf="@id/manual_num_tv"
        app:layout_constraintTop_toTopOf="@id/manual_num_tv" />

    <TextView
        android:id="@+id/profit_loss_sum_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/profit_and_loss_sum_sz"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/practical_sum_tv"
        app:layout_constraintTop_toTopOf="@id/practical_sum_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>