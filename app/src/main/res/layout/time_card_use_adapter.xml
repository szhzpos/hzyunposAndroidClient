<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_8">

    <TextView
        android:id="@+id/row_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1、"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/card_no_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_card_no"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintStart_toEndOf="@id/row_id"
        app:layout_constraintTop_toTopOf="@id/row_id" />

    <TextView
        android:id="@+id/card_no_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="88888888"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintStart_toEndOf="@id/card_no_label"
        app:layout_constraintTop_toTopOf="@id/card_no_label" />

    <TextView
        android:id="@+id/residue_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:text="@string/residue_time"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintStart_toStartOf="@id/card_no_label"
        app:layout_constraintTop_toBottomOf="@id/card_no_label" />

    <TextView
        android:id="@+id/residue_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_card_no"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintStart_toEndOf="@id/residue_time_label"
        app:layout_constraintTop_toTopOf="@id/residue_time_label" />

    <TextView
        android:id="@+id/use_limit_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:text="@string/use_limit"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintStart_toStartOf="@id/residue_time_label"
        app:layout_constraintTop_toBottomOf="@id/residue_time_label" />

    <TextView
        android:id="@+id/use_limit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每日1次"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintStart_toEndOf="@id/use_limit_label"
        app:layout_constraintTop_toTopOf="@id/use_limit_label" />

    <TextView
        android:id="@+id/card_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/time_card_name"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintStart_toEndOf="@id/card_no_tv"
        app:layout_constraintTop_toTopOf="@id/row_id" />

    <TextView
        android:id="@+id/card_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_card_no"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintStart_toEndOf="@id/card_name_label"
        app:layout_constraintTop_toTopOf="@id/card_name_label" />

    <TextView
        android:id="@+id/usage_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:text="@string/usage_time"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintStart_toStartOf="@id/card_name_label"
        app:layout_constraintTop_toBottomOf="@id/card_name_label" />

    <TextView
        android:id="@+id/usage_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_card_no"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintStart_toEndOf="@id/usage_time_label"
        app:layout_constraintTop_toTopOf="@id/usage_time_label" />

    <TextView
        android:id="@+id/valid_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:text="@string/valid_date"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintStart_toStartOf="@id/usage_time_label"
        app:layout_constraintTop_toBottomOf="@id/usage_time_label" />

    <TextView
        android:id="@+id/valid_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021-07-16 23:59:59"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintStart_toEndOf="@id/valid_date_label"
        app:layout_constraintTop_toTopOf="@id/valid_date_label" />

    <Button
        android:id="@+id/_minus_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="@dimen/mobile_p_m_btn_size"
        android:layout_height="@dimen/mobile_p_m_btn_size"
        android:background="@drawable/minus"
        app:layout_constraintBottom_toBottomOf="@+id/use_btn"
        app:layout_constraintStart_toStartOf="@id/use_limit_label"
        app:layout_constraintTop_toTopOf="@+id/use_btn" />

    <TextView
        android:id="@+id/sale_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="5dp"
        android:text="1.00"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_14"
        app:layout_constraintStart_toEndOf="@id/_minus_btn"
        app:layout_constraintTop_toTopOf="@id/_minus_btn" />

    <Button
        android:id="@+id/_plus_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="@dimen/mobile_p_m_btn_size"
        android:layout_height="@dimen/mobile_p_m_btn_size"
        android:layout_marginStart="5dp"
        android:background="@drawable/plus"
        app:layout_constraintStart_toEndOf="@id/sale_num"
        app:layout_constraintTop_toTopOf="@+id/_minus_btn" />

    <Button
        android:id="@+id/use_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_35"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_18"
        android:background="@drawable/button_sub_green"
        android:text="@string/use"
        android:textColor="@color/gray_7"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valid_date_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>