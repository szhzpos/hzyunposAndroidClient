<?xml version="1.0" encoding="utf-8"?>
<com.wyc.cloudapp.customizationView.ItemPaddingLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/business_add_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_8"
    android:paddingTop="@dimen/margin_5"
    android:paddingEnd="@dimen/margin_8"
    android:paddingBottom="@dimen/margin_5"
    app:ItemPadding="@dimen/margin_0">

    <include layout="@layout/business_order_function_button_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/business_order_item_height"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/round_shape_blue"
        android:orientation="horizontal"
        android:paddingStart="@dimen/margin_8"
        android:paddingTop="@dimen/margin_5"
        android:paddingEnd="@dimen/margin_2"
        android:paddingBottom="@dimen/margin_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/target_store"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/target_wh_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/small_fold"
            android:gravity="center_vertical"
            android:textColor="@color/text_color" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5">

        <LinearLayout
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="@dimen/business_order_item_height"
            android:layout_weight="1"
            android:background="@drawable/round_shape_blue"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_8"
            android:paddingTop="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_2"
            android:paddingBottom="@dimen/margin_5"
            app:layout_constraintBottom_toTopOf="@+id/three"
            app:layout_constraintEnd_toStartOf="@+id/two"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/enquiry_store"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/m_business_warehouse_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="@color/text_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="@dimen/business_order_item_height"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_weight="1"
            android:background="@drawable/round_shape_blue"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_8"
            android:paddingTop="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_2"
            android:paddingBottom="@dimen/margin_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/one"
            app:layout_constraintTop_toTopOf="@id/one">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/date_sz"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/m_business_date_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/text_color" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="@dimen/business_order_item_height"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_weight="1"
            android:background="@drawable/round_shape_blue"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_8"
            android:paddingTop="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_2"
            android:paddingBottom="@dimen/margin_5"
            app:layout_constraintEnd_toEndOf="@id/one"
            app:layout_constraintEnd_toStartOf="@+id/four"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/one">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/business_order_sz"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/m_business_order_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/text_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="@dimen/business_order_item_height"
            android:layout_weight="1"
            android:background="@drawable/round_shape_blue"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_8"
            android:paddingTop="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_2"
            android:paddingBottom="@dimen/margin_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/three"
            app:layout_constraintTop_toTopOf="@id/three">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/sale_operator_sz"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/m_business_operator_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableEnd="@drawable/small_fold"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_color" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/business_order_remark_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/round_shape_main_color"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/width_88"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/goods_i_sz"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/unit_sz"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:layout_width="@dimen/width_68"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/num_not_colon_sz"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16" />

    </LinearLayout>

        <com.wyc.cloudapp.customizationView.IndicatorRecyclerView
            android:id="@+id/details_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="-5dp"
            android:paddingBottom="-5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45"
            android:background="@drawable/round_shape_main_color"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_8"
            android:paddingEnd="@dimen/margin_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/num_colon_sz"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18" />

            <TextView
                android:id="@+id/business_sum_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/zero_p_z_sz"
                android:textColor="@color/orange_1"
                android:textSize="@dimen/font_size_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="@string/total_colon_sz"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18" />

            <TextView
                android:id="@+id/business_sum_amt_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:text="@string/zero_p_z_sz"
                android:textColor="@color/orange_1"
                android:textSize="@dimen/font_size_18" />
        </LinearLayout>
</com.wyc.cloudapp.customizationView.ItemPaddingLinearLayout>