<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="488dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_head_heigth"
        android:background="@drawable/dialog_top_round_shap"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/add_scale_sz"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/fun_button_font_size_24" />

        <Button
            android:id="@+id/_close"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/size_35"
            android:layout_height="@dimen/size_35"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin_2"
            android:background="@drawable/close" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45"
            android:layout_marginTop="@dimen/margin_2"
            android:background="@drawable/border_sub_gray"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/width_45"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/margin_5"
                android:text="@string/scalse_name_sz"
                android:textAlignment="viewEnd"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_size_16" />

            <EditText
                android:id="@+id/remark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_1"
                android:background="@drawable/left_separator"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="@dimen/margin_5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45"
            android:layout_marginTop="@dimen/margin_2"
            android:background="@drawable/border_sub_gray"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/width_45"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_5"
                android:text="@string/manufacturer_sz"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_size_16" />

            <EditText
                android:id="@+id/s_manufacturer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_1"
                android:layout_weight="1"
                android:background="@drawable/left_separator"
                android:inputType="textPersonName"
                android:padding="@dimen/margin_5"
                android:textColor="@color/text_color" />

            <TextView
                android:layout_width="@dimen/width_45"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_1"
                android:background="@drawable/left_separator"
                android:gravity="center"
                android:padding="@dimen/margin_5"
                android:text="@string/product_t_sz"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_size_16" />

            <EditText
                android:id="@+id/product_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_1"
                android:layout_weight="1.2"
                android:background="@drawable/left_separator"
                android:inputType="textPersonName"
                android:padding="@dimen/margin_5"
                android:textColor="@color/text_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45"
            android:layout_marginTop="@dimen/margin_2"
            android:background="@drawable/border_sub_gray"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/width_45"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_5"
                android:text="@string/ip_sz"
                android:textAlignment="viewEnd"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_size_18" />

            <EditText
                android:id="@+id/s_ip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_1"
                android:layout_weight="1"
                android:background="@drawable/left_separator"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:padding="@dimen/margin_5"
                android:textColor="@color/text_color" />

            <TextView
                android:layout_width="@dimen/width_45"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_1"
                android:background="@drawable/left_separator"
                android:gravity="center"
                android:padding="@dimen/margin_5"
                android:text="@string/port"
                android:textAlignment="viewEnd"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_size_16" />

            <EditText
                android:id="@+id/s_port"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_1"
                android:layout_weight="1.2"
                android:background="@drawable/left_separator"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:padding="@dimen/margin_5"
                android:textColor="@color/text_color" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45"
            android:layout_marginTop="@dimen/margin_2"
            android:background="@drawable/border_sub_gray"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/width_45"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_5"
                android:text="@string/d_category_sz"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_size_16" />

            <EditText
                android:id="@+id/goods_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_1"
                android:background="@drawable/left_separator"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:padding="@dimen/margin_5"
                android:textColor="@color/text_color" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="@dimen/width_128"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_8"
        android:background="@drawable/button_blue"
        android:text="@string/save_sz"
        android:textColor="@color/white_blue"
        android:textSize="@dimen/font_size_18" />
</LinearLayout>