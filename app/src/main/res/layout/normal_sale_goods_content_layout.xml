<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="0dp"
    android:paddingStart="@dimen/margin_5"
    android:paddingEnd="0dp">

    <TextView
        android:id="@+id/barcode_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/gp_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/goods_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_title"
        android:layout_alignStart="@id/goods_title"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/original_price"
        android:layout_toStartOf="@id/original_price"
        android:text="@string/b_f_ori_price_sz"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_title"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_5"
        android:text="88888888"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/discount_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/barcode"
        android:layout_centerHorizontal="true"
        android:textColor="@color/orange_1"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/row_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/goods_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="1dp"
        android:layout_toEndOf="@id/row_id"
        android:lines="1"
        android:maxHeight="@dimen/size_35"
        android:text="某某商品"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_16" />

    <TextView
        android:id="@+id/symbol_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/sale_price"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="@dimen/size_48"
        android:text="@string/currency_symbol_sz"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/sale_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/original_price"
        android:layout_toEndOf="@+id/symbol_text"
        android:text="1028"
        android:textAlignment="viewStart"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/sale_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/unit_name"
        android:layout_marginStart="@dimen/size_20"
        android:layout_toEndOf="@id/sale_price"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_14"
        android:visibility="visible" />

    <TextView
        android:id="@+id/amt_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/original_price"
        android:layout_toStartOf="@id/sale_amt"
        android:text="@string/currency_symbol_sz"
        android:textColor="@color/orange_1"
        android:textSize="@dimen/font_size_18" />

    <TextView
        android:id="@+id/sale_amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/amt_symbol"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_2"
        android:textColor="@color/orange_1"
        android:textSize="@dimen/font_size_18" />

    <TextView
        android:id="@+id/unit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/original_price"
        android:layout_marginStart="@dimen/margin_2"
        android:layout_toEndOf="@id/sale_num"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/practice_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/amt_symbol"
        android:layout_alignParentBottom="false"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_5"
        android:text="@string/goods_practice"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_14" />
</RelativeLayout>