<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/margin_8"
    android:paddingEnd="@dimen/margin_8">

    <TextView
        android:id="@+id/fullReduce_name"
        android:layout_width="@dimen/size_128"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_12" />

    <TextView
        android:id="@+id/rule_des_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_12" />

    <TextView
        android:id="@+id/diff_amt_des_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="@color/orange"
        android:textSize="@dimen/font_size_12" />

    <ImageView
        android:id="@+id/status_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/margin_18"
        android:background="@drawable/selected"
        android:contentDescription="@string/space_sz" />
</LinearLayout>