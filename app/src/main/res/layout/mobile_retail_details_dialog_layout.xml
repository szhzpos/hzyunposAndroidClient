<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_2">

        <TextView
            android:id="@+id/order_head_info_label"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_35"
            android:background="@drawable/border_gray"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/margin_5"
            android:paddingEnd="0dp"
            android:text="@string/m_order_head_sz"
            android:textColor="@color/blue"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sale_id_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_30"
            android:gravity="center"
            android:paddingStart="@dimen/margin_12"
            android:paddingEnd="0dp"
            android:text="@string/m_sale_order_id_sz"
            android:textColor="@color/label_text_color"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintStart_toStartOf="@id/order_head_info_label"
            app:layout_constraintTop_toBottomOf="@id/order_head_info_label" />

        <TextView
            android:id="@+id/m_sale_id_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_30"
            android:gravity="center_vertical"
            android:text="N0214-201201034426-0001"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/sale_id_label"
            app:layout_constraintTop_toTopOf="@id/sale_id_label" />

        <TextView
            android:id="@+id/order_time_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_30"
            android:gravity="center"
            android:paddingStart="@dimen/margin_12"
            android:paddingEnd="0dp"
            android:text="@string/m_order_time_sz"
            android:textColor="@color/label_text_color"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintStart_toStartOf="@id/sale_id_label"
            app:layout_constraintTop_toBottomOf="@id/sale_id_label" />

        <TextView
            android:id="@+id/m_order_time_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_30"
            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/order_time_label"
            app:layout_constraintTop_toTopOf="@id/order_time_label" />

        <TextView
            android:id="@+id/vip_no_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_30"
            android:gravity="center"
            android:paddingStart="@dimen/margin_12"
            android:paddingEnd="0dp"
            android:text="@string/m_vip_colon_sz"
            android:textColor="@color/label_text_color"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintStart_toStartOf="@id/order_time_label"
            app:layout_constraintTop_toBottomOf="@id/order_time_label" />

        <TextView
            android:id="@+id/m_vip_no_tv"
            android:layout_width="@dimen/width_118"
            android:layout_height="@dimen/height_30"
            android:gravity="center_vertical"
            android:text="18174358548"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintStart_toEndOf="@id/vip_no_label"
            app:layout_constraintTop_toTopOf="@id/vip_no_label" />

        <TextView
            android:id="@+id/sale_man_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_30"
            android:gravity="center"
            android:paddingStart="@dimen/margin_12"
            android:paddingEnd="0dp"
            android:text="@string/m_sale_man_sz"
            android:textColor="@color/label_text_color"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintStart_toEndOf="@id/m_vip_no_tv"
            app:layout_constraintTop_toTopOf="@id/m_vip_no_tv" />

        <TextView
            android:id="@+id/m_sale_man_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_30"
            android:gravity="center_vertical"
            android:text="营业员1"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintStart_toEndOf="@id/sale_man_label"
            app:layout_constraintTop_toTopOf="@id/sale_man_label" />

        <TextView
            android:id="@+id/order_amt_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_30"
            android:gravity="center"
            android:paddingStart="@dimen/margin_12"
            android:paddingEnd="0dp"
            android:text="@string/m_order_amt_colon_sz"
            android:textColor="@color/label_text_color"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintStart_toStartOf="@id/order_time_label"
            app:layout_constraintTop_toBottomOf="@id/vip_no_label" />

        <TextView
            android:id="@+id/m_order_amt_tv"
            android:layout_width="@dimen/width_118"
            android:layout_height="@dimen/height_30"
            android:gravity="center_vertical"
            android:text="@string/zero_p_z_sz"
            android:textColor="@color/orange_1"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintStart_toEndOf="@id/order_amt_label"
            app:layout_constraintTop_toTopOf="@id/order_amt_label" />

        <TextView
            android:id="@+id/disc_amt_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_30"
            android:gravity="center"
            android:paddingStart="@dimen/margin_12"
            android:paddingEnd="0dp"
            android:text="@string/m_disc_amt_colon_sz"
            android:textColor="@color/label_text_color"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintStart_toEndOf="@id/m_order_amt_tv"
            app:layout_constraintTop_toTopOf="@id/m_order_amt_tv" />

        <TextView
            android:id="@+id/m_disc_amt_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_30"
            android:gravity="center_vertical"
            android:text="@string/zero_p_z_sz"
            android:textColor="@color/orange_1"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintStart_toEndOf="@id/disc_amt_label"
            app:layout_constraintTop_toTopOf="@id/disc_amt_label" />

        <TextView
            android:id="@+id/order_details_label"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_35"
            android:background="@drawable/border_gray"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/margin_5"
            android:paddingEnd="0dp"
            android:text="@string/m_order_details_sz"
            android:textColor="@color/blue"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintBottom_toTopOf="@+id/m_order_details_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/order_amt_label" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/m_order_details_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/pay_details_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/order_details_label"
            app:layout_constraintVertical_weight="2" />

        <TextView
            android:id="@+id/pay_details_label"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_35"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_gray"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/margin_5"
            android:paddingEnd="0dp"
            android:text="@string/m_pay_info_sz"
            android:textColor="@color/blue"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintBottom_toTopOf="@+id/m_pay_details_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/m_order_details_list" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/m_pay_details_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pay_details_label"
            app:layout_constraintVertical_weight="1" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_58"
            android:orientation="horizontal"
            android:padding="@dimen/margin_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:id="@+id/m_pay_verify_btn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_sub_blue"
                    android:text="@string/verify_pay_sz"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_16" />

                <Button
                    android:id="@+id/m_refund_btn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_weight="1"
                    android:background="@drawable/button_sub_blue"
                    android:text="@string/m_refund_sz"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_16" />

                <com.wyc.cloudapp.customizationView.JumpTextView
                    android:id="@+id/m_print_btn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_weight="1"
                    android:background="@drawable/button_sub_blue"
                    android:text="@string/m_print_sz"
                    app:moduleId="34"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_16" />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>