<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_border_sub_gray"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_5"
    android:paddingTop="@dimen/margin_2"
    android:paddingEnd="@dimen/margin_5"
    android:paddingBottom="@dimen/margin_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_30"
        android:background="@drawable/bottom_separator"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/m_name_sz"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/vip_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_30"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/vip_card_id_sz"
            android:textColor="@color/label_text_color"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/card_code_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/label_text_color"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/vip_ph_num_sz"
            android:textColor="@color/label_text_color"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/phone_num_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/label_text_color"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_30"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/vip_integral_sz"
            android:textColor="@color/label_text_color"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/integral_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/label_text_color"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/vip_balance_sz"
            android:textColor="@color/label_text_color"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/balance_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/label_text_color"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>
</LinearLayout>