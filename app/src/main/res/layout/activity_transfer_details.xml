<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_separator"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfer_id_sz_colon" />

            <TextView
                android:id="@+id/ti_code_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_18"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfer_operator_sz" />

            <TextView
                android:id="@+id/cas_name_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_time_sz" />

            <TextView
                android:id="@+id/upload_time_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_8"
                android:layout_weight="1"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfer_time_sz" />

            <TextView
                android:id="@+id/ti_start_time_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_time_label_sz" />

            <TextView
                android:id="@+id/ti_end_time_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bottom_separator">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_separator"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_35"
                        android:background="@drawable/bottom_separator"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/margin_12"
                        android:paddingEnd="0dp"
                        android:text="@string/retail_sz"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_size_18" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/bottom_separator"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="88dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/pay_way_sz"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="188dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/pay_amt_sz"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/transfer_order_num_sz"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/sale_pay_details"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_separator"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/bottom_separator"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="0dp"
                        android:text="@string/r_b_title_sz"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/bottom_separator"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="88dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/refund_way_sz"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="188dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/refund_money_sz"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/transfer_order_num_sz"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/refund_pay_details"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_separator"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/bottom_separator"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="0dp"
                        android:text="@string/charge_order_sz"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/bottom_separator"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="88dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/pay_way_sz"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="188dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/pay_amt_sz"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/transfer_order_num_sz"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recharge_pay_details"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_separator"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/bottom_separator"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="0dp"
                        android:text="@string/times_card_order_sz"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/bottom_separator"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="88dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/pay_way_sz"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="188dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/pay_amt_sz"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/transfer_order_num_sz"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/cik_pay_details"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/bottom_separator"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="0dp"
                android:text="@string/final_sum_amt_sz"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/bottom_separator"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="88dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/pay_sum_amt_sz"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="108dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/transfer_cash_unit_sz"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="108dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/actual_cash_unit_sz"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/cashBox_residue_unit_sz"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/bottom_separator"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/amt_money_tv"
                        android:layout_width="88dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/zero_p_z_sz"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/trans_money_tv"
                        android:layout_width="108dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/zero_p_z_sz"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/sj_money_tv"
                        android:layout_width="108dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/zero_p_z_sz"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/cashbox_money_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/zero_p_z_sz"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
