<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/more_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/more_fun_dialog_width"
        android:layout_height="@dimen/more_fun_dialog_height">

        <Button
            android:id="@+id/sync_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/more_fun_btn_width"
            android:layout_height="@dimen/more_fun_btn_height"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/button_blue"
            android:text="@string/sync_sz"
            android:textColor="@color/blue_white"
            android:textSize="@dimen/font_size_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/setup_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/more_fun_btn_width"
            android:layout_height="@dimen/more_fun_btn_height"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/button_blue"
            android:text="@string/setup_sz"
            android:textColor="@color/blue_white"
            android:textSize="@dimen/font_size_14"
            app:layout_constraintStart_toEndOf="@id/query_local_refund_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/o_cashbox"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/more_fun_btn_width"
            android:layout_height="@dimen/more_fun_btn_height"
            android:layout_marginStart="@dimen/margin_5"
            android:background="@drawable/button_blue"
            android:text="@string/o_cashbox_sz"
            android:textColor="@color/blue_white"
            app:layout_constraintStart_toEndOf="@id/barcode_scale"
            app:layout_constraintTop_toTopOf="@id/setup_btn" />

        <Button
            android:id="@+id/barcode_scale"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/more_fun_btn_width"
            android:layout_height="@dimen/more_fun_btn_height"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/button_blue"
            android:text="@string/b_code_s_d_sz"
            android:textColor="@color/blue_white"
            android:textSize="@dimen/font_size_14"
            app:layout_constraintStart_toEndOf="@id/sync_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/all_refund_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/more_fun_btn_width"
            android:layout_height="@dimen/more_fun_btn_height"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/button_blue"
            android:text="@string/all_refund_sz"
            android:textColor="@color/blue_white"
            android:textSize="@dimen/font_size_14"
            app:layout_constraintStart_toEndOf="@id/o_cashbox"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/query_local_refund_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/more_fun_btn_width"
            android:layout_height="@dimen/more_fun_btn_height"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/button_blue"
            android:text="@string/local_refund_order_sz"
            android:textColor="@color/blue_white"
            android:textSize="@dimen/font_size_14"
            app:layout_constraintStart_toEndOf="@id/all_refund_btn"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>