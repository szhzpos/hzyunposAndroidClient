<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".design.LabelDesignActivity">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_40"
        android:orientation="horizontal"
        android:padding="@dimen/margin_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/label_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_2"
            android:layout_weight="1"
            android:background="@drawable/edit_text_with_blue_border_style"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingStart="@dimen/margin_5"
            android:textSize="@dimen/font_size_14" />

        <Spinner
            android:id="@+id/label_size"
            style="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:foreground="@drawable/spinner_style"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <com.wyc.cloudapp.design.LabelView
        android:id="@+id/labelView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_8"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelView"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:background="@drawable/top_separator"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/flowLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.wyc.cloudapp.customizationView.TopDrawableTextView
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/delete"
            android:onClick="onClick"
            android:padding="@dimen/margin_5"
            android:text="@string/delete"
            android:textSize="@dimen/font_size_12"
            app:verSpacing="@dimen/margin_5"
            tools:ignore="TouchTargetSizeCheck" />

        <com.wyc.cloudapp.customizationView.TopDrawableTextView
            android:id="@+id/shrink"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/shrink"
            android:onClick="onClick"
            android:padding="@dimen/margin_5"
            android:text="@string/shrink"
            android:textSize="@dimen/font_size_12"
            app:verSpacing="@dimen/margin_5"
            tools:ignore="TouchTargetSizeCheck" />

        <com.wyc.cloudapp.customizationView.TopDrawableTextView
            android:id="@+id/zoom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/zoom"
            android:onClick="onClick"
            android:padding="@dimen/margin_5"
            android:text="@string/zoom"
            android:textSize="@dimen/font_size_12"
            app:verSpacing="@dimen/margin_5"
            tools:ignore="TouchTargetSizeCheck" />

        <com.wyc.cloudapp.customizationView.TopDrawableTextView
            android:id="@+id/rotate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/rotate"
            android:onClick="onClick"
            android:padding="@dimen/margin_5"
            android:text="@string/rotate"
            android:textSize="@dimen/font_size_12"
            app:verSpacing="@dimen/margin_5"
            tools:ignore="TouchTargetSizeCheck" />

        <com.wyc.cloudapp.customizationView.TopDrawableTextView
            android:id="@+id/undo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/undo"
            android:onClick="onClick"
            android:padding="@dimen/margin_5"
            android:text="@string/undo"
            android:textSize="@dimen/font_size_12"
            app:verSpacing="@dimen/margin_5"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <com.wyc.cloudapp.customizationView.FlowLayout
        android:id="@+id/flowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_0"
        android:padding="@dimen/margin_0"
        app:closing="true"
        app:item_horizontal_spacing="@dimen/margin_1"
        app:item_vertical_spacing="@dimen/margin_1"
        app:layout_constraintBottom_toTopOf="@id/bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rowCount="5"
        app:separator_color="@color/gray"
        app:separator_size="@dimen/size_1">

        <com.wyc.cloudapp.customizationView.TopDrawableTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_68"
            android:drawableTop="@drawable/text"
            android:onClick="onClick"
            android:padding="@dimen/margin_12"
            android:text="@string/text"
            android:textSize="@dimen/font_size_14"
            app:layout_weight_width="0.2"
            app:verSpacing="@dimen/margin_8" />

        <com.wyc.cloudapp.customizationView.TopDrawableTextView
            android:id="@+id/barcode"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_68"
            android:drawableTop="@drawable/barcode"
            android:onClick="onClick"
            android:padding="@dimen/margin_12"
            android:text="@string/barcode"
            android:textSize="@dimen/font_size_14"
            app:layout_weight_width="0.2"
            app:verSpacing="@dimen/margin_8" />

        <com.wyc.cloudapp.customizationView.TopDrawableTextView
            android:id="@+id/qrcode"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_68"
            android:drawableTop="@drawable/qrcode"
            android:onClick="onClick"
            android:padding="@dimen/margin_12"
            android:text="@string/qrcode"
            android:textSize="@dimen/font_size_14"
            app:layout_weight_width="0.2"
            app:verSpacing="@dimen/margin_8" />

        <com.wyc.cloudapp.customizationView.TopDrawableTextView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_68"
            android:drawableTop="@drawable/line"
            android:onClick="onClick"
            android:padding="@dimen/margin_12"
            android:text="@string/line"
            android:textSize="@dimen/font_size_14"
            app:layout_weight_width="0.2"
            app:verSpacing="@dimen/margin_8" />

        <com.wyc.cloudapp.customizationView.TopDrawableTextView
            android:id="@+id/rect"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_68"
            android:drawableTop="@drawable/rect"
            android:onClick="onClick"
            android:padding="@dimen/margin_12"
            android:text="@string/rect"
            android:textSize="@dimen/font_size_14"
            app:layout_weight_width="0.202"
            app:verSpacing="@dimen/margin_8" />

        <com.wyc.cloudapp.customizationView.TopDrawableTextView
            android:id="@+id/circle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_68"
            android:drawableTop="@drawable/circle"
            android:onClick="onClick"
            android:padding="@dimen/margin_12"
            android:text="@string/circle"
            android:textSize="@dimen/font_size_14"
            app:layout_weight_width="0.2"
            app:verSpacing="@dimen/margin_8" />

        <com.wyc.cloudapp.customizationView.TopDrawableTextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_68"
            android:drawableTop="@drawable/date"
            android:onClick="onClick"
            android:padding="@dimen/margin_12"
            android:text="@string/label_date"
            android:textSize="@dimen/font_size_14"
            app:layout_weight_width="0.2"
            app:verSpacing="@dimen/margin_8" />

        <com.wyc.cloudapp.customizationView.TopDrawableTextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_68"
            android:drawableTop="@drawable/data"
            android:onClick="onClick"
            android:padding="@dimen/margin_12"
            android:text="@string/data"
            android:textSize="@dimen/font_size_14"
            app:layout_weight_width="0.2"
            app:verSpacing="@dimen/margin_8" />

        <com.wyc.cloudapp.customizationView.TopDrawableTextView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_68"
            android:drawableTop="@drawable/image"
            android:onClick="onClick"
            android:padding="@dimen/margin_12"
            android:text="@string/bg"
            android:textSize="@dimen/font_size_14"
            app:layout_weight_width="0.2"
            app:verSpacing="@dimen/margin_8" />

        <com.wyc.cloudapp.customizationView.TopDrawableTextView
            android:id="@+id/document"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_68"
            android:drawableTop="@drawable/export"
            android:onClick="onClick"
            android:text="@string/imExport"
            android:textSize="@dimen/font_size_14"
            android:visibility="visible"
            app:layout_weight_width="0.2"
            app:verSpacing="@dimen/margin_8" />

    </com.wyc.cloudapp.customizationView.FlowLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_58"
        android:background="@color/appColor"
        android:paddingStart="@dimen/size_25"
        android:paddingEnd="@dimen/size_25"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.wyc.cloudapp.customizationView.TopDrawableTextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/save"
            android:onClick="onClick"
            android:text="@string/business_save_sz"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16"
            app:bottomSpacing="@dimen/margin_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:selectTextColor="@color/white"
            app:verSpacing="@dimen/margin_2"
            tools:ignore="TextContrastCheck" />

        <com.wyc.cloudapp.customizationView.TopDrawableTextView
            android:id="@+id/preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/perview"
            android:onClick="onClick"
            android:text="@string/preview"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16"
            app:bottomSpacing="@dimen/margin_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:selectTextColor="@color/white"
            app:verSpacing="@dimen/size_3"
            tools:ignore="TextContrastCheck" />

        <com.wyc.cloudapp.customizationView.TopDrawableTextView
            android:id="@+id/printLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/print"
            android:onClick="onClick"
            android:text="@string/m_print_sz"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16"
            app:bottomSpacing="@dimen/margin_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/preview"
            app:layout_constraintStart_toEndOf="@+id/save"
            app:layout_constraintTop_toTopOf="parent"
            app:selectTextColor="@color/white"
            app:verSpacing="@dimen/margin_2"
            tools:ignore="TextContrastCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>