<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_triangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/space_sz"
        android:src="@drawable/triangle_up"
        app:layout_constraintBottom_toTopOf="@+id/message"
        app:layout_constraintEnd_toEndOf="@id/message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_triangle"
        android:layout_centerHorizontal="true"
        android:background="@drawable/snackbar_background"
        android:gravity="center"
        android:minLines="2"
        android:padding="@dimen/margin_2"
        android:textSize="@dimen/font_size_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_triangle" />

</androidx.constraintlayout.widget.ConstraintLayout>