<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/param_main"
    android:layout_width="868dp"
    android:layout_height="588dp"
    android:background="@drawable/round_shape"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_head_heigth"
        android:background="@drawable/dialog_top_round_shap"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/setup_sz"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_24" />

        <Button
            android:id="@+id/_close"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/size_35"
            android:layout_height="@dimen/size_35"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin_2"
            android:background="@drawable/close" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fun_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/parm_setting_btn_height"
        android:background="@drawable/border_sub_gray"
        android:orientation="horizontal"
        android:padding="@dimen/margin_2">

        <Button
            android:id="@+id/base_param_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/parm_setting_btn_width"
            android:layout_height="@dimen/parm_setting_btn_height"
            android:background="@color/white"
            android:text="@string/base_param_sz"
            android:textColor="@color/blue"
            android:textSize="@dimen/font_size_16" />

        <Button
            android:id="@+id/peripheral_param_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/parm_setting_btn_width"
            android:layout_height="@dimen/parm_setting_btn_height"
            android:background="@color/white"
            android:text="@string/peripheral_sz"
            android:textColor="@color/blue"
            android:textSize="@dimen/font_size_16" />

        <Button
            android:id="@+id/print_format_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/parm_setting_btn_width"
            android:layout_height="@dimen/parm_setting_btn_height"
            android:background="@color/white"
            android:text="@string/print_layout_sz"
            android:textColor="@color/blue"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></LinearLayout>
</LinearLayout>