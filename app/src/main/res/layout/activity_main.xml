<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appColor"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:id="@+id/main_top"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004">

        <ImageView
            android:id="@+id/cashier_desk_image"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/cashier_desk_sz"
            app:srcCompat="@drawable/nav" />

        <TextView
            android:id="@+id/cashier_desk_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/cashier_desk_sz"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Space
            android:layout_width="18dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/q_deal_linerLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/main_top_icon"
            android:orientation="vertical"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/deal_sz"
                app:srcCompat="@drawable/q_deal" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="@string/deal_sz"
                android:textColor="@color/white"
                android:textSize="@dimen/fun_button_font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shift_exchange_linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/main_top_icon"
            android:orientation="vertical"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/shift_exchange_sz"
                app:srcCompat="@drawable/shift_exchange" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:text="@string/shift_exchange_sz"
                android:textColor="@color/white"
                android:textSize="@dimen/fun_button_font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/other_linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/main_top_icon"
            android:orientation="vertical"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/other_sz"
                app:srcCompat="@drawable/other" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:text="@string/other_sz"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/fun_button_font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_top_right_corner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/main_top_right_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6" />

                <ImageView
                    android:id="@+id/network_status"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:srcCompat="@drawable/network" />

                <ImageView
                    android:id="@+id/printer_status"
                    android:layout_width="64dp"
                    android:layout_height="32dp"
                    app:srcCompat="@drawable/printer" />

                <ImageView
                    android:id="@+id/upload_status"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:srcCompat="@drawable/upload" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_weight="0.5"
                    app:srcCompat="@drawable/close" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_top_right_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cashier_sz"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收银01"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store_sz"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="默认仓库[0000]"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_middle_left"
        android:layout_width="380dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:background="@drawable/round_shape"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_top"
        app:layout_constraintVertical_bias="0">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sale_goods_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_shape">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/vip_info_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/fun_button_margin_top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/vip_info"
                android:textColor="@color/black"
                android:textSize="@dimen/fun_button_font_size_16" />

            <TextView
                android:id="@+id/vip_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员01"
                android:textColor="@color/black"
                android:textSize="@dimen/fun_button_font_size_16" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vip_phone"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/fun_button_font_size_16" />

            <TextView
                android:id="@+id/vip_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18888888888"
                android:textColor="@color/black"
                android:textSize="@dimen/fun_button_font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_info_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_sz"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fun_button_font_size_16" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="202002198888"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fun_button_font_size_16" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jh_sz"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fun_button_font_size_16" />

                <TextView
                    android:id="@+id/jh_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0001"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fun_button_font_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_time_sz"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fun_button_font_size_16" />

                <TextView
                    android:id="@+id/oper_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020-02-19 14:32:59"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fun_button_font_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/num_sz"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fun_button_font_size_18" />

                <TextView
                    android:id="@+id/sale_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fun_button_font_size_18" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/amount_sz"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fun_button_font_size_18" />

                <TextView
                    android:id="@+id/sale_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥88.00"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/fun_button_font_size_18" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_middle_middle"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        app:layout_constraintBottom_toBottomOf="@id/main_middle_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/main_middle_left"
        app:layout_constraintTop_toBottomOf="@+id/main_top"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/add_num"
            android:layout_width="@dimen/fun_button_width_size"
            android:layout_height="@dimen/fun_button_height_size"
            android:layout_gravity="center"
            android:background="@drawable/dialog_button_blue"
            android:text="@string/add"
            android:textColor="@color/white_blue"
            android:textSize="@dimen/fun_button_font_size_24" />

        <Button
            android:id="@+id/minus_num"
            android:layout_width="@dimen/fun_button_width_size"
            android:layout_height="@dimen/fun_button_height_size"
            android:layout_marginTop="@dimen/fun_button_margin_top"
            android:background="@drawable/dialog_button_pink"
            android:text="@string/minus"
            android:textColor="@color/white_pink"
            android:textSize="@dimen/fun_button_font_size_24" />

        <Button
            android:id="@+id/num"
            android:layout_width="@dimen/fun_button_width_size"
            android:layout_height="@dimen/fun_button_height_size"
            android:layout_marginTop="@dimen/fun_button_margin_top"
            android:background="@drawable/button_green"
            android:text="@string/num_button_sz"
            android:textColor="@color/black_white"
            android:textSize="@dimen/fun_button_font_size_18" />

        <Button
            android:id="@+id/clear"
            android:layout_width="@dimen/fun_button_width_size"
            android:layout_height="@dimen/fun_button_height_size"
            android:layout_marginTop="@dimen/fun_button_margin_top"
            android:background="@drawable/button_green"
            android:text="@string/clear"
            android:textColor="@color/black_white"
            android:textSize="@dimen/fun_button_font_size_18" />

        <Button
            android:id="@+id/discount"
            android:layout_width="@dimen/fun_button_width_size"
            android:layout_height="@dimen/fun_button_height_size"
            android:layout_marginTop="@dimen/fun_button_margin_top"
            android:background="@drawable/button_green"
            android:text="@string/discount"
            android:textColor="@color/black_white"
            android:textSize="@dimen/fun_button_font_size_18" />

        <Button
            android:id="@+id/change_price"
            android:layout_width="@dimen/fun_button_width_size"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fun_button_margin_top"
            android:background="@drawable/button_green"
            android:text="@string/change_price"
            android:textColor="@color/black_white"
            android:textSize="@dimen/fun_button_font_size_18" />

        <Button
            android:id="@+id/tmp_order"
            android:layout_width="@dimen/fun_button_width_size"
            android:layout_height="@dimen/fun_button_height_size"
            android:layout_marginTop="@dimen/fun_button_margin_top"
            android:background="@drawable/button_green"
            android:text="@string/tmp_order"
            android:textColor="@color/black_white" />

        <Button
            android:id="@+id/vip"
            android:layout_width="@dimen/fun_button_width_size"
            android:layout_height="@dimen/fun_button_height_size"
            android:layout_marginTop="@dimen/fun_button_margin_top"
            android:background="@drawable/button_green"
            android:text="@string/vip_button"
            android:textColor="@color/black_white"
            android:textSize="@dimen/fun_button_font_size_18" />

        <Button
            android:id="@+id/b_sale_man"
            android:layout_width="@dimen/fun_button_width_size"
            android:layout_height="@dimen/fun_button_height_size"
            android:layout_marginTop="@dimen/fun_button_margin_top"
            android:background="@drawable/button_green"
            android:text="@string/sale_man"
            android:textColor="@color/black_white"
            android:textSize="@dimen/fun_button_font_size_18" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/check_out"
            android:layout_width="@dimen/fun_button_width_size"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="@drawable/button_orange"
            android:text="@string/check_out"
            android:textColor="@color/white"
            android:textSize="@dimen/fun_button_font_size_24" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/goods_type_list"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/round_shape"
        android:layoutDirection="ltr"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/main_middle_middle"
        app:layout_constraintTop_toBottomOf="@+id/main_top"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/round_shape"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/keyboard_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_middle_middle"
        app:layout_constraintTop_toBottomOf="@+id/goods_type_list"
        app:layout_constraintVertical_bias="0.57">

    </androidx.recyclerview.widget.RecyclerView>

    <TableLayout
        android:id="@+id/keyboard_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/search_text_linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_middle_middle"
        app:layout_constraintTop_toBottomOf="@id/recyclerView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/fun_button_margin_top">

            <Button
                android:id="@+id/zero"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@drawable/button_sub_blue_blue"
                android:text="0"
                android:textColor="@color/white_pink"
                android:textSize="@dimen/fun_button_font_size_24" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/fun_button_margin_top">

            <Button
                android:id="@+id/A"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@drawable/button_sub_blue_blue"
                android:text="A"
                android:textColor="@color/white_pink"
                android:textSize="@dimen/fun_button_font_size_24" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/fun_button_margin_top">

            <Button
                android:id="@+id/Q"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@drawable/button_sub_blue_blue"
                android:text="Q"
                android:textColor="@color/white_pink"
                android:textSize="@dimen/fun_button_font_size_24" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/fun_button_margin_top">

            <Button
                android:id="@+id/Z"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@drawable/button_sub_blue_blue"
                android:text="Z"
                android:textColor="@color/white_pink"
                android:textSize="@dimen/fun_button_font_size_24" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/search_text_linearLayout"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginTop="@dimen/fun_button_margin_top"
        android:layout_marginBottom="@dimen/margin_5"
        android:background="@drawable/round_shape"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_middle_middle"
        app:layout_constraintTop_toBottomOf="@id/keyboard_layout">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/barcode_sz"
            android:textColor="@color/black"
            android:textSize="@dimen/fun_button_font_size_18" />

        <EditText
            android:id="@+id/search_content"
            android:layout_width="248dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_5"
            android:background="@drawable/plain_border_gray"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/keyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_8"
            app:srcCompat="@drawable/keyboard_icon" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>