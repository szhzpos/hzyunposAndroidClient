<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rowId"
        android:layout_width="@dimen/width_45"
        android:layout_height="@dimen/width_45"
        android:gravity="center"
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_8"
        android:text="@string/row_id_sz"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_18" />

    <TextView
        android:id="@+id/only_code"
        android:layout_width="@dimen/width_118"
        android:layout_height="@dimen/width_45"
        android:gravity="center"
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_8"
        android:text="@string/manage_item_no_sz"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_18" />

    <TextView
        android:id="@+id/barcode"
        android:layout_width="@dimen/size_188"
        android:layout_height="@dimen/width_45"
        android:gravity="center"
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_8"
        android:text="@string/manage_barcode_sz"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_18" />

    <TextView
        android:id="@+id/name"
        android:layout_width="@dimen/width_328"
        android:layout_height="@dimen/width_45"
        android:gravity="center"
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_8"
        android:text="@string/manage_name_sz"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_18" />

    <TextView
        android:id="@+id/stock"
        android:layout_width="@dimen/width_128"
        android:layout_height="@dimen/width_45"
        android:gravity="center"
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_8"
        android:text="@string/inventory_sz"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_18" />

    <TextView
        android:id="@+id/unit"
        android:layout_width="@dimen/width_88"
        android:layout_height="@dimen/width_45"
        android:gravity="center"
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_8"
        android:text="@string/unit_sz"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_18" />

    <TextView
        android:id="@+id/spec"
        android:layout_width="0dp"
        android:layout_height="@dimen/width_45"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_8"
        android:text="存货属性"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_18" />
</LinearLayout>