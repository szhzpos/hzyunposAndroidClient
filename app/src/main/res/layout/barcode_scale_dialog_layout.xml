<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/b_scalse_dialog_width"
        android:layout_height="@dimen/height_58"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_scale"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_2"
            android:layout_weight="1"
            android:background="@drawable/button_blue"
            android:text="@string/add_scale_sz"
            android:textColor="@color/blue_white"
            android:textSize="@dimen/font_size_16" />

        <Button
            android:id="@+id/modfy_scale"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_2"
            android:layout_weight="1"
            android:background="@drawable/button_blue"
            android:text="@string/modify_scale_sz"
            android:textColor="@color/blue_white"
            android:textSize="@dimen/font_size_16" />

        <Button
            android:id="@+id/del_scale"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_2"
            android:layout_weight="1"
            android:background="@drawable/button_blue"
            android:text="@string/del_scale_sz"
            android:textColor="@color/blue_white"
            android:textSize="@dimen/font_size_16" />

        <Button
            android:id="@+id/download_to_scale"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_2"
            android:layout_weight="1"
            android:background="@drawable/button_blue"
            android:text="@string/d_to_scale_sz"
            android:textColor="@color/blue_white"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_58"
            android:background="@color/table_header_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/row_id"
                android:layout_width="@dimen/width_45"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8"
                android:gravity="center"
                android:padding="@dimen/margin_2"
                android:text="@string/row_id_sz"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18" />

            <TextView
                android:id="@+id/s_checked"
                android:layout_width="@dimen/width_45"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8"
                android:gravity="center"
                android:padding="@dimen/margin_2"
                android:text="@string/checked_sz"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18" />

            <TextView
                android:id="@+id/product_type"
                android:layout_width="@dimen/width_128"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8"
                android:gravity="center"
                android:padding="@dimen/margin_2"
                android:text="@string/product_t_sz"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18" />

            <TextView
                android:id="@+id/scale_ip"
                android:layout_width="@dimen/width_128"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8"
                android:gravity="center"
                android:padding="@dimen/margin_2"
                android:text="@string/ip_sz"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18" />

            <TextView
                android:id="@+id/scale_port"
                android:layout_width="@dimen/width_45"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8"
                android:gravity="center"
                android:padding="@dimen/margin_2"
                android:text="@string/port_sz"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18" />

            <TextView
                android:id="@+id/g_c_name"
                android:layout_width="@dimen/width_118"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8"
                android:gravity="center"
                android:padding="@dimen/margin_2"
                android:text="@string/d_category_sz"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18" />

            <TextView
                android:id="@+id/down_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/margin_2"
                android:text="@string/down_s_sz"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18" />

            <TextView
                android:id="@+id/scale_rm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/margin_2"
                android:text="@string/remark_sz"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/b_scalse_r_v"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_border_sub_gray"
            android:padding="@dimen/margin_1" />
    </LinearLayout>

</LinearLayout>