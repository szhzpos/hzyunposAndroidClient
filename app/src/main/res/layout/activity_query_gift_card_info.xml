<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.mobile.cashierDesk.MobileCashierActivity">

    <EditText
        android:id="@+id/search_once_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:layout_gravity="center"
        android:background="@drawable/round_border_sub_gray"
        android:drawableEnd="@drawable/search"
        android:drawablePadding="@dimen/margin_8"
        android:ems="10"
        android:hint="@string/input_once_card_hint"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:padding="@dimen/margin_5"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_18" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/once_card_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

</LinearLayout>