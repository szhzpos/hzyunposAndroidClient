<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border_sub_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:background="@drawable/round_shape_main_color"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/fun_button_font_size_24" />

        <Button
            android:id="@+id/_close"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/size_35"
            android:layout_height="@dimen/size_35"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin_2"
            android:background="@drawable/close" />
    </LinearLayout>

    <EditText
        android:id="@+id/new_numOrprice_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"
        android:layout_margin="@dimen/margin_2"
        android:background="@drawable/border_sub_gray"
        android:ems="10"
        android:focusable="auto"
        android:inputType="number|numberDecimal"
        android:maxLength="8"
        android:text="@string/d_zero_point_sz"
        android:textColor="@color/text_color"
        android:textSize="@dimen/fun_button_font_size_18" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/keyboard"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_2">

        <Button
            android:id="@+id/_one"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/pay_dialog_button_width"
            android:layout_height="@dimen/pay_dialog_button_height"
            android:layout_weight="2.5"
            android:background="@drawable/button_sub_blue"
            android:text="@string/one_sz"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/num_keyboard_font_size_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/_two"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/pay_dialog_button_width"
            android:layout_height="@dimen/pay_dialog_button_height"
            android:layout_marginStart="@dimen/margin_2"
            android:layout_weight="2.5"
            android:background="@drawable/button_sub_blue"
            android:text="@string/two_sz"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/num_keyboard_font_size_24"
            app:layout_constraintStart_toEndOf="@+id/_one"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/_three"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/pay_dialog_button_width"
            android:layout_height="@dimen/pay_dialog_button_height"
            android:layout_marginStart="@dimen/margin_2"
            android:layout_weight="2.5"
            android:background="@drawable/button_sub_blue"
            android:text="@string/three_sz"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/num_keyboard_font_size_24"
            app:layout_constraintStart_toEndOf="@+id/_two"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/_back"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/pay_dialog_button_width"
            android:layout_height="@dimen/pay_dialog_button_height"
            android:layout_marginStart="@dimen/margin_2"
            android:layout_weight="2.5"
            android:background="@drawable/button_sub_blue"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/num_keyboard_font_size_18"
            app:layout_constraintStart_toEndOf="@+id/_three"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/_four"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/pay_dialog_button_width"
            android:layout_height="@dimen/pay_dialog_button_height"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_weight="2.5"
            android:background="@drawable/button_sub_blue"
            android:text="@string/four_sz"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/num_keyboard_font_size_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/_one" />

        <Button
            android:id="@+id/_five"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/pay_dialog_button_width"
            android:layout_height="@dimen/pay_dialog_button_height"
            android:layout_marginStart="@dimen/margin_2"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_weight="2.5"
            android:background="@drawable/button_sub_blue"
            android:text="@string/five_sz"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/num_keyboard_font_size_24"
            app:layout_constraintStart_toEndOf="@+id/_four"
            app:layout_constraintTop_toBottomOf="@+id/_two" />

        <Button
            android:id="@+id/_six"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/pay_dialog_button_width"
            android:layout_height="@dimen/pay_dialog_button_height"
            android:layout_marginStart="@dimen/margin_2"
            android:layout_marginTop="@dimen/margin_2"
            android:background="@drawable/button_sub_blue"
            android:text="@string/six_sz"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/num_keyboard_font_size_24"
            app:layout_constraintStart_toEndOf="@+id/_five"
            app:layout_constraintTop_toBottomOf="@+id/_three" />

        <Button
            android:id="@+id/cancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/pay_dialog_button_width"
            android:layout_height="@dimen/pay_dialog_button_height"
            android:layout_marginStart="@dimen/margin_2"
            android:layout_marginTop="@dimen/margin_2"
            android:background="@drawable/button_sub_blue"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/num_keyboard_font_size_18"
            app:layout_constraintStart_toEndOf="@+id/_six"
            app:layout_constraintTop_toBottomOf="@+id/_back" />

        <Button
            android:id="@+id/button3"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/pay_dialog_button_width"
            android:layout_height="@dimen/pay_dialog_button_height"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_weight="2.5"
            android:background="@drawable/button_sub_blue"
            android:text="@string/seven_sz"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/num_keyboard_font_size_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/_four" />

        <Button
            android:id="@+id/button4"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/pay_dialog_button_width"
            android:layout_height="@dimen/pay_dialog_button_height"
            android:layout_marginStart="@dimen/margin_2"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_weight="2.5"
            android:background="@drawable/button_sub_blue"
            android:text="@string/eight_sz"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/num_keyboard_font_size_24"
            app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintTop_toBottomOf="@+id/_five" />

        <Button
            android:id="@+id/button5"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/pay_dialog_button_width"
            android:layout_height="@dimen/pay_dialog_button_height"
            android:layout_marginStart="@dimen/margin_2"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_weight="2.5"
            android:background="@drawable/button_sub_blue"
            android:text="@string/nine_sz"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/num_keyboard_font_size_24"
            app:layout_constraintStart_toEndOf="@+id/button4"
            app:layout_constraintTop_toBottomOf="@+id/_six" />

        <Button
            android:id="@+id/button15"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/pay_dialog_button_width"
            android:layout_height="@dimen/pay_dialog_button_height"
            android:layout_marginStart="@dimen/margin_2"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_weight="2.5"
            android:background="@drawable/button_sub_blue"
            android:text="@string/point_sz"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/num_keyboard_font_size_24"
            app:layout_constraintStart_toEndOf="@+id/button16"
            app:layout_constraintTop_toBottomOf="@+id/button5" />

        <Button
            android:id="@+id/button6"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/pay_dialog_button_width"
            android:layout_height="@dimen/pay_dialog_button_height"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_weight="2.5"
            android:background="@drawable/button_sub_blue"
            android:text="@string/zero_sz"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/num_keyboard_font_size_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <Button
            android:id="@+id/button16"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/pay_dialog_button_width"
            android:layout_height="@dimen/pay_dialog_button_height"
            android:layout_marginStart="@dimen/margin_2"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_weight="2.5"
            android:background="@drawable/button_sub_blue"
            android:text="@string/d_zero_sz"
            android:textColor="@color/white"
            android:textSize="@dimen/num_keyboard_font_size_24"
            app:layout_constraintStart_toEndOf="@+id/button6"
            app:layout_constraintTop_toBottomOf="@+id/button4" />

        <Button
            android:id="@+id/_ok"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/pay_dialog_button_width"
            android:layout_height="138dp"
            android:layout_marginStart="@dimen/margin_2"
            android:layout_marginTop="@dimen/margin_2"
            android:background="@drawable/button_sub_blue"
            android:text="@string/OK"
            android:textColor="@color/white"
            android:textSize="@dimen/num_keyboard_font_size_18"
            app:layout_constraintStart_toEndOf="@+id/button5"
            app:layout_constraintTop_toBottomOf="@+id/cancel" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>