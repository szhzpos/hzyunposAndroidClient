<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_sub_gray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_head_heigth"
        android:background="@drawable/dialog_top_round_shap"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="@string/deal_sz"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_24" />

        <Button
            android:id="@+id/_close"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/size_35"
            android:layout_height="@dimen/size_35"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin_2"
            android:background="@drawable/close" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/time_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"
        android:layout_marginStart="@dimen/margin_1"
        android:layout_marginEnd="@dimen/margin_1"
        android:background="@drawable/bottom_separator"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/margin_5"
            android:text="@string/query_time_sz"
            android:textSize="@dimen/font_size_18" />

        <EditText
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_1"
            android:background="@drawable/left_right_separator"
            android:drawableEnd="@drawable/date"
            android:ems="10"
            android:focusable="auto"
            android:focusableInTouchMode="true"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:paddingStart="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_5"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_2"
            android:layout_marginEnd="@dimen/margin_2"
            android:gravity="center_vertical"
            android:text="@string/to_sz"
            android:textSize="@dimen/font_size_18" />

        <EditText
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_1"
            android:background="@drawable/left_right_separator"
            android:drawableEnd="@drawable/date"
            android:ems="10"
            android:focusable="auto"
            android:focusableInTouchMode="true"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:paddingStart="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_5"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/margin_5"
            android:text="@string/order_not_colon_sz"
            android:textSize="@dimen/font_size_18" />

        <EditText
            android:id="@+id/order_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_1"
            android:background="@drawable/left_right_separator"
            android:drawableEnd="@drawable/order_ico"
            android:ems="12"
            android:focusable="auto"
            android:focusableInTouchMode="true"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:paddingStart="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_5"
            android:textColor="@color/text_color" />

        <Button
            android:id="@+id/button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/width_88"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_2"
            android:layout_marginTop="@dimen/margin_1"
            android:layout_marginBottom="@dimen/margin_2"
            android:background="@color/appColor"
            android:text="@string/query_sz"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_18" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/condition_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:layout_marginStart="@dimen/margin_1"
        android:layout_marginEnd="@dimen/margin_1"
        android:background="@drawable/bottom_separator"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_2"
            android:gravity="center_vertical"
            android:text="@string/pay_s_sz"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/pay_status_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_1"
            android:background="@drawable/left_right_separator"
            android:drawableEnd="@drawable/content"
            android:ems="4"
            android:focusable="auto"
            android:focusableInTouchMode="true"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:padding="@dimen/margin_5"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_2"
            android:gravity="center_vertical"
            android:text="@string/cashier_not_colon_sz"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/cashier_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_1"
            android:background="@drawable/left_right_separator"
            android:drawableEnd="@drawable/content"
            android:ems="4"
            android:focusable="auto"
            android:focusableInTouchMode="true"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:padding="@dimen/margin_5"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_2"
            android:gravity="center_vertical"
            android:text="@string/s_e_status_sz"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/s_ex_status_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_1"
            android:background="@drawable/left_right_separator"
            android:drawableEnd="@drawable/content"
            android:ems="4"
            android:focusable="auto"
            android:focusableInTouchMode="true"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:padding="@dimen/margin_5"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_2"
            android:gravity="center_vertical"
            android:text="@string/upload_s_sz"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/upload_status_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_1"
            android:background="@drawable/left_right_separator"
            android:drawableEnd="@drawable/content"
            android:ems="4"
            android:focusable="auto"
            android:focusableInTouchMode="true"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:padding="@dimen/margin_5"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_2"
            android:gravity="center_vertical"
            android:text="@string/order_s_sz"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/order_status_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_1"
            android:background="@drawable/left_right_separator"
            android:drawableEnd="@drawable/content"
            android:ems="4"
            android:focusable="auto"
            android:focusableInTouchMode="true"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:padding="@dimen/margin_5"
            android:textColor="@color/text_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/detail_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/table_header_h"
            android:focusable="auto" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/detail_body"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>