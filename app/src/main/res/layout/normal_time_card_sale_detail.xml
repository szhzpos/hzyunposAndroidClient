<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/once_card_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8"
        android:paddingStart="@dimen/margin_5"
        android:paddingTop="@dimen/margin_5"
        android:paddingEnd="@dimen/margin_0"
        android:text="某某商品"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/m_price_colon_sz"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/symbol_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/currency_symbol_sz"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/sale_price"
            android:layout_width="@dimen/width_88"
            android:layout_height="wrap_content"

            android:text="128.00"
            android:textAlignment="viewStart"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/sale_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/margin_8"

            android:layout_marginEnd="@dimen/margin_8"
            android:text="1.00"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_14" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/amt_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/currency_symbol_sz"
            android:textColor="@color/orange_1"
            android:textSize="@dimen/font_size_18" />

        <TextView
            android:id="@+id/sale_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="@dimen/margin_2"
            android:textColor="@color/orange_1"
            android:textSize="@dimen/font_size_18" />
    </LinearLayout>

</LinearLayout>