<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border_sub_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_2">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pay_method_list"
            android:layout_width="382dp"
            android:layout_height="@dimen/height_58"
            android:layout_marginBottom="@dimen/margin_2"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40"
            android:background="@drawable/border_sub_gray"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/c_amt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.55"
                android:autofillHints=""
                android:background="@drawable/edit_text_style"
                android:focusable="auto"
                android:hint="@string/pay_amt_sz"
                android:inputType="numberDecimal"
                android:paddingStart="@dimen/margin_5"
                android:paddingEnd="0dp"
                android:textColor="@color/orange_1"
                android:textSize="@dimen/font_size_18" />

            <EditText
                android:id="@+id/pay_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_2"
                android:layout_weight="1"
                android:background="@drawable/left_separator"
                android:hint="@string/space_sz"
                android:inputType="number"
                android:paddingStart="@dimen/margin_5"
                android:paddingEnd="0dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_16"
                android:visibility="gone" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/keyboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_2">

            <Button
                android:id="@+id/_one"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_weight="2.5"
                android:background="@drawable/button_sub_blue"
                android:text="@string/one_sz"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/_two"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_weight="2.5"
                android:background="@drawable/button_sub_blue"
                android:text="@string/two_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toEndOf="@+id/_one"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/_three"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_weight="2.5"
                android:background="@drawable/button_sub_blue"
                android:text="@string/three_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toEndOf="@+id/_two"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/_back"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:background="@drawable/button_sub_blue"
                android:text="@string/back"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_18"
                app:layout_constraintStart_toEndOf="@id/_ten"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/_four"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_weight="2.5"
                android:background="@drawable/button_sub_blue"
                android:text="@string/four_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/_one" />

            <Button
                android:id="@+id/_five"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_weight="2.5"
                android:background="@drawable/button_sub_blue"
                android:text="@string/five_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toEndOf="@+id/_four"
                app:layout_constraintTop_toBottomOf="@+id/_two" />

            <Button
                android:id="@+id/_six"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_weight="2.5"
                android:background="@drawable/button_sub_blue"
                android:text="@string/six_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toEndOf="@+id/_five"
                app:layout_constraintTop_toBottomOf="@+id/_three" />

            <Button
                android:id="@+id/_seven"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_weight="2.5"
                android:background="@drawable/button_sub_blue"
                android:text="@string/seven_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/_four" />

            <Button
                android:id="@+id/_eight"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_weight="2.5"
                android:background="@drawable/button_sub_blue"
                android:text="@string/eight_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toEndOf="@+id/_seven"
                app:layout_constraintTop_toBottomOf="@+id/_five" />

            <Button
                android:id="@+id/_nine"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_weight="2.5"
                android:background="@drawable/button_sub_blue"
                android:text="@string/nine_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toEndOf="@+id/_eight"
                app:layout_constraintTop_toBottomOf="@+id/_six" />

            <Button
                android:id="@+id/_zero"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginTop="@dimen/margin_2"
                android:background="@drawable/button_sub_blue"
                android:text="@string/zero_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/_seven" />

            <Button
                android:id="@+id/_d_zero"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2"
                android:background="@drawable/button_sub_blue"
                android:text="@string/d_zero_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toEndOf="@id/_zero"
                app:layout_constraintTop_toBottomOf="@id/_eight" />

            <Button
                android:id="@+id/_point"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2"
                android:background="@drawable/button_sub_blue"
                android:text="@string/point_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toEndOf="@id/_d_zero"
                app:layout_constraintTop_toBottomOf="@id/_nine" />

            <Button
                android:id="@+id/_one_hundred"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:background="@drawable/button_sub_blue"
                android:text="@string/eighty_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/_point" />

            <Button
                android:id="@+id/_fifty"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2"
                android:background="@drawable/button_sub_blue"
                android:text="@string/fifty_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toEndOf="@id/_nine"
                app:layout_constraintTop_toBottomOf="@id/_twenty" />

            <Button
                android:id="@+id/_ten"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:background="@drawable/button_sub_blue"
                android:text="@string/ten_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toEndOf="@id/_three"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/_twenty"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2"
                android:background="@drawable/button_sub_blue"
                android:text="@string/twenty_sz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/num_keyboard_font_size_24"
                app:layout_constraintStart_toEndOf="@id/_six"
                app:layout_constraintTop_toBottomOf="@+id/_ten" />

            <Button
                android:id="@+id/_cancel"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/pay_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2"
                android:background="@drawable/button_sub_blue"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18"
                app:layout_constraintStart_toEndOf="@id/_twenty"
                app:layout_constraintTop_toBottomOf="@id/_back" />

            <Button
                android:id="@+id/_ok"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/pay_dialog_button_width"
                android:layout_height="@dimen/d_dialog_button_height"
                android:layout_marginStart="@dimen/margin_2"
                android:background="@drawable/button_orange"
                android:text="@string/OK"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/_one_hundred" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>