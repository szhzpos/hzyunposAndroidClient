<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.mobile.business.MobileSupplierInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="2dp">

        <Spinner
            android:id="@+id/spinner_"
            android:layout_width="@dimen/size_128"
            android:layout_height="match_parent"
            android:foreground="@drawable/spinner_style" />

        <EditText
            android:id="@+id/_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_5"
            android:background="@drawable/round_border_sub_gray"
            android:drawableEnd="@drawable/search"
            android:drawablePadding="@dimen/margin_8"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:padding="@dimen/margin_5"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_18" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/_supplier_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

</merge>