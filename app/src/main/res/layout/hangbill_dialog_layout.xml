<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/hang_bill_dialog_w"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_head_heigth"
        android:background="@drawable/dialog_top_round_shap"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/hangbill_sz"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_24" />

        <Button
            android:id="@+id/_close"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/size_35"
            android:layout_height="@dimen/size_35"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin_2"
            android:background="@drawable/close" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_58"
        android:layout_marginStart="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_2"
        android:layout_marginEnd="@dimen/margin_2"
        android:background="@color/blue_subtransparent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/to_checkout"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/width_88"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginBottom="@dimen/margin_2"
            android:background="@drawable/button_orange"
            android:text="@string/to_checkout_sz"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16" />

        <Space
            android:layout_width="@dimen/width_68"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/del_hang_b"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/width_88"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_2"
            android:layout_marginStart="@dimen/margin_18"
            android:background="@drawable/button_green"
            android:text="@string/del_hang_bill"
            android:textColor="@color/white_blue"
            android:textSize="@dimen/font_size_16" />

        <LinearLayout
            android:id="@+id/vip_info_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginStart="@dimen/margin_12"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/vip_info_sz"
                android:textColor="@color/white"
                android:textSize="@dimen/fun_button_font_size_16" />

            <TextView
                android:id="@+id/vip_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/fun_button_font_size_16" />

            <Space
                android:layout_width="@dimen/size_35"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vip_ph_num_sz"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/fun_button_font_size_16" />

            <TextView
                android:id="@+id/vip_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/fun_button_font_size_16" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_2"
            android:layout_marginBottom="@dimen/margin_2"
            android:background="@drawable/border_sub_gray"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/margin_1"
            android:paddingEnd="@dimen/margin_1"
            android:paddingBottom="@dimen/margin_1">

            <ListView
                android:id="@+id/header"
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="false"
                android:focusable="auto" />

            <ListView
                android:id="@+id/hangbill_list"
                android:layout_width="308dp"
                android:layout_height="match_parent"
                android:divider="@color/blue_subtransparent"
                android:dividerHeight="@dimen/margin_1"
                android:drawSelectorOnTop="false"
                android:listSelector="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/h_detail_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginEnd="@dimen/margin_2"
                android:background="@drawable/border_sub_gray" />

            <ListView
                android:id="@+id/hangbill_details_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginEnd="@dimen/margin_2"
                android:layout_marginBottom="@dimen/margin_2"
                android:background="@drawable/border_sub_gray">

            </ListView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>