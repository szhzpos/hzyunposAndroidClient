<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="888dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_head_heigth"
        android:background="@drawable/dialog_top_round_shap"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/hangbill_sz"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_24" />

        <Button
            android:id="@+id/_close"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/size_35"
            android:layout_height="@dimen/size_35"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin_2"
            android:background="@drawable/close" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/border_sub_gray"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/hangbill_list"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_2"
            android:layout_marginTop="@dimen/margin_2"
            android:background="@drawable/border_sub_gray"
            android:divider="@color/blue_subtransparent"
            android:dividerHeight="@dimen/margin_1"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="true" />

        <ListView
            android:id="@+id/hangbill_details_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_2"
            android:background="@drawable/border_sub_gray"
            android:divider="@color/blue_subtransparent"
            android:dividerHeight="@dimen/margin_1" />

    </LinearLayout>
</LinearLayout>