<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/hang_bill_dialog_width"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:layout_marginStart="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_2"
        android:layout_marginEnd="@dimen/margin_2"
        android:layout_marginBottom="@dimen/margin_2"
        android:background="@drawable/bottom_separator"
        android:orientation="horizontal">

        <Button
            android:id="@+id/to_checkout"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/width_88"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginBottom="@dimen/margin_2"
            android:background="@drawable/button_orange"
            android:text="@string/to_checkout_sz"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16" />

        <Space
            android:layout_width="@dimen/width_68"
            android:layout_height="wrap_content" />

        <com.wyc.cloudapp.customizationView.JumpTextView
            android:id="@+id/del_hang_b"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/width_88"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_2"
            android:layout_marginStart="@dimen/margin_18"
            android:background="@drawable/button_blue"
            android:text="@string/del_hang_bill"
            app:moduleId="3"
            android:textColor="@color/blue_white"
            android:textSize="@dimen/font_size_16" />

        <LinearLayout
            android:id="@+id/vip_info_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginStart="@dimen/margin_12"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/vip_info_sz"
                android:textColor="@color/orange_1"
                android:textSize="@dimen/fun_button_font_size_16" />

            <TextView
                android:id="@+id/vip_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange_1"
                android:textSize="@dimen/fun_button_font_size_16" />

            <Space
                android:layout_width="@dimen/size_35"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vip_ph_num_sz"
                android:textAlignment="center"
                android:textColor="@color/orange_1"
                android:textSize="@dimen/fun_button_font_size_16" />

            <TextView
                android:id="@+id/vip_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange_1"
                android:textSize="@dimen/fun_button_font_size_16" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_2"
            android:background="@drawable/round_border_sub_gray"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/margin_1"
            android:paddingEnd="@dimen/margin_1"
            android:paddingBottom="@dimen/margin_1">

            <LinearLayout
                android:id="@+id/h_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/table_header_height"
                android:background="@color/table_header_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/row_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:width="40dp"
                    android:ellipsize="marquee"
                    android:ems="10"
                    android:maxHeight="100dp"
                    android:maxEms="50"
                    android:maxLines="50"
                    android:paddingTop="@dimen/margin_8"
                    android:paddingBottom="@dimen/margin_8"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/hang_id"
                    android:layout_width="@dimen/width_68"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="@dimen/margin_8"
                    android:paddingBottom="@dimen/margin_8"
                    android:text="@string/hang_id_sz"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_18" />

                <TextView
                    android:id="@+id/h_amt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/margin_8"
                    android:paddingBottom="@dimen/margin_8"
                    android:text="@string/amt_not_colon_sz"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_18" />

                <TextView
                    android:id="@+id/h_cas_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/margin_8"
                    android:paddingBottom="@dimen/margin_8"
                    android:text="@string/oper_sz"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_18"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/h_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minWidth="168dp"
                    android:paddingTop="@dimen/margin_8"
                    android:paddingBottom="@dimen/margin_8"
                    android:text="@string/time_sz"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_18" />
            </LinearLayout>

            <ListView
                android:id="@+id/hangbill_list"
                android:layout_width="@dimen/hangbill_order_list_width"
                android:layout_height="match_parent"
                android:divider="@color/blue_subtransparent"
                android:dividerHeight="@dimen/margin_1"
                android:drawSelectorOnTop="false"
                android:listSelector="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/h_detail_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/table_header_height"
                android:background="@color/table_header_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/barcode"
                    android:layout_width="@dimen/table_barcode_width"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="@dimen/margin_8"
                    android:paddingBottom="@dimen/margin_8"
                    android:text="@string/barcode_sz"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_18" />

                <TextView
                    android:id="@+id/goods_title"
                    android:layout_width="@dimen/table_goods_title_width"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="@dimen/margin_8"
                    android:paddingBottom="@dimen/margin_8"
                    android:text="@string/g_name_sz"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_18" />

                <TextView
                    android:id="@+id/xnum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/margin_8"
                    android:paddingBottom="@dimen/margin_8"
                    android:text="@string/sec_num_sz"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_18" />

                <TextView
                    android:id="@+id/h_sale_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/margin_8"
                    android:paddingBottom="@dimen/margin_8"
                    android:text="@string/sec_price_sz"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_18" />

                <TextView
                    android:id="@+id/h_discount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/margin_8"
                    android:paddingBottom="@dimen/margin_8"
                    android:text="@string/discount_sz"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_18" />

                <TextView
                    android:id="@+id/h_sale_amt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/margin_8"
                    android:paddingBottom="@dimen/margin_8"
                    android:text="@string/sec_sum_sz"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_18" />
            </LinearLayout>

            <ListView
                android:id="@+id/hangbill_details_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_1"
                android:layout_marginBottom="@dimen/margin_2"
                android:background="@drawable/round_border_sub_gray"
                android:divider="@null">

            </ListView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>