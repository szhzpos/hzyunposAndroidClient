<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/goods_height"
    android:background="@drawable/round_shape_blue"
    android:padding="@dimen/margin_2">

    <ImageView
        android:id="@+id/g_img"
        android:layout_width="@dimen/goods_img_width"
        android:layout_height="match_parent"
        android:contentDescription="@string/space_sz"
        android:visibility="visible" />

    <TextView
        android:id="@+id/barcode_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/gp_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/goods_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_title"
        android:layout_marginStart="@dimen/margin_2"
        android:layout_marginEnd="@dimen/margin_2"
        android:layout_marginBottom="@dimen/margin_2"
        android:layout_toEndOf="@id/g_img"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_12" />

    <TextView
        android:id="@+id/goods_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_2"
        android:layout_marginEnd="@dimen/margin_2"
        android:layout_toEndOf="@+id/g_img"
        android:maxHeight="@dimen/size_35"
        android:text="某某商品"
        android:textColor="@color/good_name_color"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/symbol_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/goods_title"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_2"
        android:text="@string/currency_symbol_sz"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/sale_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_2"
        android:layout_marginBottom="@dimen/margin_2"
        android:layout_toEndOf="@+id/symbol_text"
        android:text="1028"
        android:textAlignment="viewStart"
        android:textColor="@color/orange_1"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/unit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sale_price"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_toEndOf="@id/sale_price"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_14" />

    <ImageView
        android:id="@+id/modify_"
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_30"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/margin_12"
        android:layout_marginBottom="@dimen/margin_8"
        android:visibility="gone"
        app:srcCompat="@drawable/modify" />

</RelativeLayout>