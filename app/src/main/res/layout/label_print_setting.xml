<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data >
        <variable
            name="setting"
            type="com.wyc.cloudapp.design.LabelPrintSetting" />
    </data>

    <com.wyc.cloudapp.customizationView.ItemPaddingLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/margin_5"
        app:ItemPadding="@dimen/margin_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/business_print_item_height"
            android:background="@drawable/round_style"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="@string/print_way"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/way_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableEnd="@drawable/small_fold"
                android:gravity="center_vertical|end"
                android:text="@{setting.way.description}"
                android:tag="@{setting.way.ordinal()}"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/business_print_item_height"
            android:background="@drawable/round_style"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="@string/printer"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/printer_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableEnd="@drawable/small_fold"
                android:gravity="center_vertical|end"
                android:text="@{setting.printer}"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/business_print_item_height"
            android:background="@drawable/round_style"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="@string/rotate_degree_setting"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/rotate_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableEnd="@drawable/small_fold"
                android:gravity="center_vertical|end"
                android:tag="@{setting.rotate.ordinal()}"
                android:text="@{setting.rotate.description}"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/business_print_item_height"
            android:background="@drawable/round_style"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="@string/cur_label_model"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/template_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableEnd="@drawable/small_fold"
                android:gravity="center_vertical|end"
                android:tag="@{setting.labelTemplateId}"
                android:text="@{setting.labelTemplateName}"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/business_print_item_height"
            android:background="@drawable/round_style"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="@string/print_num"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_16" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/minus"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/mobile_p_m_btn_size"
                android:layout_height="@dimen/mobile_p_m_btn_size"
                android:layout_marginStart="@dimen/size_35"
                android:background="@drawable/minus" />

            <TextView
                android:id="@+id/print_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/margin_8"
                android:text="@{String.valueOf(setting.printNum)}"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_18" />

            <Button
                android:id="@+id/plus"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/mobile_p_m_btn_size"
                android:layout_height="@dimen/mobile_p_m_btn_size"
                android:layout_marginEnd="@dimen/margin_18"
                android:background="@drawable/plus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/business_print_item_height"
            android:background="@drawable/round_style"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_2"
                android:text="@string/hor_offset"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_16" />

            <Button
                android:id="@+id/minusX"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/mobile_p_m_btn_size"
                android:layout_height="@dimen/mobile_p_m_btn_size"
                android:layout_marginStart="@dimen/margin_5"
                android:background="@drawable/minus" />

            <TextView
                android:id="@+id/offsetX_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/margin_8"
                android:text="@{String.valueOf(setting.offsetX)}"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_18" />

            <Button
                android:id="@+id/plusX"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/mobile_p_m_btn_size"
                android:layout_height="@dimen/mobile_p_m_btn_size"
                android:layout_marginEnd="@dimen/margin_12"
                android:background="@drawable/plus" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_2"
                android:text="@string/ver_offset"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_16" />

            <Button
                android:id="@+id/minusY"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/mobile_p_m_btn_size"
                android:layout_height="@dimen/mobile_p_m_btn_size"
                android:layout_marginStart="@dimen/margin_5"
                android:background="@drawable/minus" />

            <TextView
                android:id="@+id/offsetY_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/margin_8"
                android:text="@{String.valueOf(setting.offsetY)}"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_18" />

            <Button
                android:id="@+id/plusY"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/mobile_p_m_btn_size"
                android:layout_height="@dimen/mobile_p_m_btn_size"
                android:layout_marginEnd="@dimen/margin_18"
                android:background="@drawable/plus" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/business_print_item_height"
            android:background="@drawable/round_style"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_5"
                android:text="@string/dpi"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/dpi_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="@{String.valueOf(setting.dpi)}"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_16"
                app:drawableEndCompat="@drawable/small_fold" />
        </LinearLayout>

        <TextView
            android:id="@+id/print_template_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/business_print_item_height"
            android:background="@drawable/round_style"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="@string/label_design"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_16"
            app:drawableEndCompat="@drawable/small_fold" />

    </com.wyc.cloudapp.customizationView.ItemPaddingLinearLayout>
</layout>