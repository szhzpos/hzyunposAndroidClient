<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border_sub_gray"
    android:orientation="vertical">

    <com.wyc.cloudapp.dialog.CustomizationView.EditTextForHideKeyBoard
        android:id="@+id/new_numOrprice_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"
        android:layout_marginStart="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_2"
        android:layout_marginEnd="@dimen/margin_2"
        android:background="@drawable/border_sub_gray"
        android:ems="10"
        android:focusable="auto"
        android:inputType="number|numberDecimal"
        android:maxLength="8"
        android:padding="@dimen/margin_5"
        android:text="@string/d_zero_point_sz"
        android:textColor="@color/text_color"
        android:textSize="@dimen/fun_button_font_size_18" />

    <com.wyc.cloudapp.dialog.CustomizationView.KeyboardView
        android:id="@+id/keyboard_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>